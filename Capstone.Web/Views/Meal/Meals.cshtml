@{
    ViewBag.Title = "Meals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h2>Meals</h2>

    @if (TempData["action"] == "delete")
    {
        <div class="alert alert-success" role="alert">
            <h5>Succesfully deleted meal!</h5>
        </div>

    }
