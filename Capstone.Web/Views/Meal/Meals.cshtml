        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="row" style="margin-bottom: 10px;">
                <div class="meal-photo" style="display: inline-block; width: 30%;">
                    <a href="/Meal/Detail?MealId=@Model[i].MealId">
                        <img src="~/Recipe-Images/@(Model[i].Recipes[0].RecipeImageName)" height="236" class="img-thumbnail" /> 
                    </a>
                </div>
                <div class="meal-data" style="display: inline-block; width: 60%; vertical-align: top;">
                    <h4><a href="/Meal/Detail?MealId=@Model[i].MealId">@Model[i].MealName</a></h4>
                    @{
                        var entree = Model[i].Recipes.Where(r => r.MealType == "Entree").FirstOrDefault();
                        var appetizer = Model[i].Recipes.Where(r => r.MealType == "Appetizer").FirstOrDefault();
                        var sidedish = Model[i].Recipes.Where(r => r.MealType == "Sidedish").FirstOrDefault();
                        var dessert = Model[i].Recipes.Where(r => r.MealType == "Dessert").FirstOrDefault();
                    }

                    <table class="table meal-recipes" style="width: 50%;">
                        <tr>
                            <td><strong>Entree</strong></td>
                            @if (entree == null)
                            {
                                <td></td>
                            }
                            else
                            {
                                <td>
                                    @entree.RecipeName
                                </td>
                            }
                        </tr>
                        <tr>
                            <td><strong>Appetizer</strong></td>
                            @if (appetizer == null)
                            {
                                <td></td>
                            }
                            else
                            {
                                <td>
                                    @appetizer.RecipeName
                                </td>
                            }
                        </tr>
                        <tr>
                            <td><strong>Sidedish</strong></td>
                            @if (sidedish == null)
                            {
                                <td></td>
                            }
                            else
                            {
                                <td>
                                    @sidedish.RecipeName
                                </td>
                            }
                        </tr>
                        <tr>
                            <td><strong>Dessert</strong></td>
                            @if (dessert == null)
                            {
                                <td></td>
                            }
                            else
                            {
                                <td>
                                    @dessert.RecipeName
                                </td>
                            }
                        </tr>
                    </table>

                </div>
            </div>
        }



