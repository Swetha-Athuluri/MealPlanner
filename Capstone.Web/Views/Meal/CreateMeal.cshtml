                                    @Html.DropDownList("MealType", MealRecipeViewModel.MealTypes, new { placeholder = "please select type of meal" })

                                </div>
                            </div>

                    </div>*@

                <div class="wrapper">
                    <div class="col-md-6 checkbox_fields_wrap">

                        <div class="cloneCheckBox">
                            @Html.DropDownList("RecipeIds", Model.RecipeList, new { placeholder = "Please select Recipe to Meal" })
                            @Html.DropDownList("MealType", MealRecipeViewModel.MealTypes, new { placeholder = "please select type of meal", @id = "mealtype" })
                            <a href="#" class="remove_checkbox">Remove</a>
                        </div>
                        <input type="hidden" name="RecipeAndMealType[0]" value=""><button class="add_checkbox_button btn btn-success">Add Another Recipe</button>


                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Create Meal</button>

            </div>
        </div>
    }
</div>

