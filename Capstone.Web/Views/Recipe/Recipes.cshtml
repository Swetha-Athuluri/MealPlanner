@using Capstone.Web.Models
@model List<Recipe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Recipes</h1>

<p>this is the page with all of the recipes</p>

<div>
    @{
        foreach (Recipe recipe in Model)
        {
            
                <div class="row recipeTile">
                    <div class="col container-fluid recipeList">
                        <a href="~/Views/Recipe/Detail?user_id=@recipe.UserId"><img src="~/Content/img/@(recipe.ImageName).jpg" class="img-thumbnail" /> </a>
                        <a href="~/Views/Recipe/Detail?user_id=@recipe.UserId"><h2 class="recipeText">@recipe.Name</h2></a>
                        <p class="parkText">@recipe.Description</p>  
                    </div>
                    @Html.ActionLink("Detail", "Detail", "Recipe", new { id = 2 }, null)
                </div>
            
        }
    }
</div>




