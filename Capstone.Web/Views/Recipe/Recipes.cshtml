@using Capstone.Web.Models
@model List<Recipe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["action"] == "delete")
{
    <div class="alert alert-success" role="alert">
        <h5>Succesfully deleted recipe!</h5>
    </div>

}
<div class="row">
    <div class="col-lg-6 col-lg-offset-1">

<h1 style="text-align:center; margin-left:50%">Recipes</h1>
    </div>

</div>


    
    @{
        foreach (Recipe recipe in Model)
        {

            <div class="row recipeTile">
                <div class="col-lg-4 recipeList">
                    <div class="col-lg-12" style="display: inline-block">
                        <a href="/Recipe/Detail?RecipeId=@recipe.RecipeId"><img src="~/Recipe-Images/@(recipe.ImageName)" class="" /> </a>
                        <div class="col-lg-12">
                            <a href="/Recipe/Detail?RecipeId=@recipe.RecipeId"><h2 class="recipeText">@recipe.Name</h2></a>
                        </div>
                        
                    </div>
                </div>
            </div>

        }
    }
            









