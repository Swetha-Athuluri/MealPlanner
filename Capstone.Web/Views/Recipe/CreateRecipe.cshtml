@using Capstone.Web.Models.ViewModels
@model RecipeViewModel

@{
    ViewBag.Title = "CreateRecipe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #sortable {
        list-style-type: none;
        margin: 0;
        padding: 0;
        width: 60%;
    }

        #sortable li {
            margin: 0 3px 3px 3px;
            padding: 0.4em;
            padding-left: 1.5em;
            font-size: 1.4em;
            height: 18px;
        }

            #sortable li span {
                position: absolute;
                margin-left: -1.3em;
            }

    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    table {
        font-size: 1em;
    }

    .ui-draggable, .ui-droppable {
        background-position: top;
    }
</style>
<div class="form-group-lg">
    @using (Html.BeginForm("CreateRecipe", "Recipe", FormMethod.Post))
    {
        @Html.TextBoxFor(m => m.RecipeName, new { placeholder = "Enter Recipe Name", @class = "form-control form-control-lg", @id = "lgFormGroupInput" })
        @Html.TextAreaFor(m => m.RecipeDescription, new { placeholder = "Enter Recipe Description", @class = "form-control", @row = "3" })
        <ul id="sortable">

            <li class="ui-state-default">
                <span class="ui-icon ui-icon-arrowthick-2-n-s"></span>
                @Html.TextBoxFor(m => m.IngredientName, new { placeholder = "Ingredient", @id = "frm1" })
            </li>
            <li id="demo">
                jdlkjasoifdjaof
            </li>

        </ul>

    }







</div>
<script>

    $(function () {
        $("#sortable").sortable();
        $("#sortable").disableSelection();
    });
    $("li").on('keyup', function (e) {
        if (e.keyCode == 13) {
            var counter = 1;

            if (counter > 1) {
                $("#sortable").append("<li id=\"demo" + counter + "> <li>")
                var x = document.getElementById("frm1").value;
                document.getElementById("demo" + counter).innerHTML = x;
                counter++;
            }
            else {
                $("#sortable").append("<li id=\"demo" + counter +"> <li>")
                var x = document.getElementById("frm1").value;
                document.getElementById("demo" + counter).innerHTML = x;
                counter++;
            }
        }
    });

</script>
