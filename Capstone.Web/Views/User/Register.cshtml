@model Capstone.Web.Models.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="register">
    <h2>Register</h2>

    @using (Html.BeginForm("Register", "User", FormMethod.Post))
    {
        <div class="form-group">
            <div>
                <div class="has-error">
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
                <div class="has-error">
                    @Html.ValidationMessageFor(m => m.EmailAddress)
                </div>
                <div class="has-error">
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
               <div class="has-error">
                    @Html.ValidationMessageFor(m => m.Password)
               </div>
              
            </div>


            <div>
                @Html.TextBoxFor(m => m.Username, new { placeholder = "test_123", @class = "form-group" })
            </div>
            <div>
                @Html.TextBoxFor(m => m.EmailAddress, new { placeholder = "test@mealplanner.com", @class = "form-group" })
            </div>
            <div>
                @Html.PasswordFor(m => m.Password, new { placeholder = "password", @class = "form-group" })
            </div>
            <div>
                @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "type password again", @class = "form-group" })
            </div>

            <button>Register</button>

        </div>
    }
</div>
